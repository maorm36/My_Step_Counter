<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#121212"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Steps header -->
            <TextView
                android:id="@+id/count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Steps: 0"
                android:textColor="#EDEDED"
                android:layout_marginTop="60dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium" />

            <!--  Sensor blocks  -->
            <!-- Accel vs Linear Accel (two columns) -->
            <LinearLayout
                android:id="@+id/sensorsReadings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Left column: ax/ay/az/|a| -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:paddingEnd="12dp">

                        <TextView android:id="@+id/ax" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="ax: 0.0000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/ay" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="ay: 0.0000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/az" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="az: 0.0000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/amag" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="|a|: 0.0000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                    </LinearLayout>

                    <!-- Right column: lx/ly/lz/|lin| -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:paddingStart="12dp">

                        <TextView android:id="@+id/lx" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="lx: 0.0000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/ly" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="ly: 0.0000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/lz" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="lz: 0.0000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/lmag" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="|lin|: 0.0000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Spacer -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <!-- Angular velocity vs Gravity (two columns) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Left: wx/wy/wz/|ω| -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:paddingEnd="12dp">

                        <TextView android:id="@+id/wx" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="wx: 0.000 rad/s" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/wy" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="wy: 0.000 rad/s" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/wz" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="wz: 0.000 rad/s" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/wmag" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="|ω|: 0.000 rad/s" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                    </LinearLayout>

                    <!-- Right: gx/gy/gz/|g| -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="start"
                        android:paddingStart="12dp">

                        <TextView android:id="@+id/gx" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="gx: 0.000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/gy" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="gy: 0.000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/gz" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="gz: 0.000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                        <TextView android:id="@+id/gmag" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" android:text="|g|: 0.000" android:textColor="#E0E0E0" android:textSize="16sp" android:fontFamily="monospace"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- emaHz centered -->
                <TextView
                    android:id="@+id/hzText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="emaHz: 0.000"
                    android:textColor="#EDEDED"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/modeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="current mode: UNKNOWN"
                    android:textColor="#EDEDED"
                    android:textSize="16sp" />
            </LinearLayout>

            <!--  Stats panel  -->
            <LinearLayout
                android:id="@+id/apiTestPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="vertical"
                android:layoutDirection="ltr">

                <TextView
                    android:id="@+id/specifyDurationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Enter minutes to see your stats for that period (up to now):"
                    android:textColor="#EDEDED"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/durMinutesInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Duration (minutes)"
                        android:textColor="#EDEDED"
                        android:textColorHint="#9E9E9E"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/queryDurationBtn"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="QUERY"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:backgroundTint="#CFA7FF"/>
                </LinearLayout>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/avgCadenceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg steps per duration:"
                    android:textColor="#EDEDED"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/avgCadenceVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#EDEDED"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>

                <!-- Today total steps -->
                <TextView
                    android:id="@+id/todayStepsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Today's steps:"
                    android:textColor="#EDEDED"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/todayStepsVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#EDEDED"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/lastDurStepsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps within that Duration:"
                    android:textColor="#EDEDED"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/lastDurStepsVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#EDEDED"
                    android:textSize="16sp"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/KmH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Km/H: 0"
                    android:textColor="#EDEDED"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
